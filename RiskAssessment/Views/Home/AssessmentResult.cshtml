    <style>
        .button {
            background-color: #4473c4;
            border: none;
            color: white;
            padding: 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 20px;
            margin: 8px 5px;
            cursor: pointer;
            border-radius: 12px;
        }

        .collapsible {
            background-color: #4473c4;
            color: white;
            cursor: pointer;
            padding: 8px;
            width: 95%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 18px;
            margin: 10px 10px 15px 15px;
        }

            .active, .collapsible:hover {
                background-color: #223e6e;
            }

            .collapsible:after {
                content: '\002B';
                color: white;
                font-weight: bold;
                float: right;
                margin-left: 5px;
            }

        .active:after {
            content: "\2212";
        }


        .content {
            padding: 20px 10px 0px 0px;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
            width: 100%;
        }

        .scrollelement {
            position: fixed;
            bottom: 25px;
            right: -15px;
            transition: 0.5s;
        }

            .scrollelement:hover {
                opacity: 0.7;
                transform: 0.5s;
            }





        .card {
            border: none;
        }
    </style>
</head>
