    <!--content for the assessment results begins-->
    <div style="max-width:100%;background-color: #F5F5F5">
        <div class="container" style="padding-left:10px;padding-right:0px">
            <div class="col-md-12" style="padding-left:0px">

                <div class="col-md-12" style="margin-top:20px">
                    <h1 style="color:#4473c4;font-size:25px;font-weight:bold">Assessment Result</h1>
                    <!--displaying risk level and colour of risk level-->
                    <h2 style="font-weight:bold;color: @(ViewBag.RiskLevel == "High" ? Html.Raw("red"):  ViewBag.RiskLevel =="Low" ? Html.Raw("green"):Html.Raw("orange"))">@ViewBag.RiskLevel Risk Level</h2>
                    <span class="sub-heading " style="color:#4473c4;font-size:21px">What to do next</span>
                    <p style="color:black;font-size:20px;width:100%">
                        Your answers suggest that you are at a  <strong>@ViewBag.RiskLevel </strong>level risk for falls.


                    </p>
                    <p style="color:black;font-size:20px;width:100%">
                        The risks identified via the assessment can be seen below



                    </p>



                </div>



            </div>

        </div>
    </div>
    <div class="scrollelement">
        <img src="~/Content/scrolltotop_128.png" id="scrollTop"
             title="Click to scroll to top at once" style="height: 70%; width: 50%" />
    </div>

    <!--displaying the risk list-->
    <div style="background-color:#F8F8FF;max-width:100%;margin-bottom:20px">
        <div class="container" style="margin-top:32px;padding-left:10px;padding-right:0px">
            <div class="col-md-12" style="padding-left:0px;margin-top:20px;margin-bottom:25px">
                <div class="col-md-12">
                    <div class="col-md-8" style="padding-left:0px">
                        <h3 style="font-weight:bold;color:#4473c4;font-size:23px">Risks Identified</h3>
                    </div>


                </div>
                <!--counting the number of risks-->
                @for (int i = 0; i < Model.RiskList.Count; i++)
                {

                    <button class="collapsible">
                        <!--displaying the risk name-->
                        @Html.Raw(Model.RiskList[i].RiskName)
                    </button>
                    <div class="content">
                        <div class="col-md-12" style="padding-left:0px;width:100%">
                            <div class="col-md-4">
                                <!--displaying risk image-->
                                <img src="@Html.Raw(Model.RiskList[i].ImgDir)" style="width:100%;float:left" />
                            </div>
                            <div class="col-md-8">
                                <!--displaying risk statements-->
                                <p style="text-align:left;color:black;font-size:20px">@Html.Raw(Model.RiskList[i].RiskStatement)</p>
                            </div>

                        </div>
                    </div>

                }
            </div>
        </div>
    </div>

    <div style="max-width:100%;background-color: #F5F5F5">
        <div class="container" style="padding-left:10px;padding-right:0px;margin-bottom:50px">
            <div class="col-md-12" style="padding-left:0px">
                <div class="col-md-8" style="margin-top:20px">
                    <h3 style="color:#4473c4;font-size:25px">Your Action Plan is ready</h3>
                    <p style="color:black;font-size:20px;width:100%">
                        Based on the risks identified, we have designed targeted action plans for you to mitigate and help improve your health and reduce the likelihood of falls occurring in the future.
                    </p>
                    <p style="color:black;font-size:20px;width:100%">
                        To view the action plans please click on the GENERATE PLAN button.
                    </p>
                </div>
                <div class="col-md-4" style="padding-left:0px">
                    <!--button to generate the action plan-->
                    @using (Html.BeginForm("ActionPlan", "Home", FormMethod.Post))
                    {

                        <input type="hidden" name="SessionID" value="@(Session["SessionID"])" />
                        <button type="Submit" style="margin-bottom:50px;margin-left:150px;margin-top:50px" class="button">Generate Plan</button>


                    }


                </div>


            </div>
        </div>
    </div>

    <!--content ends-->
    <script>
        var coll = document.getElementsByClassName("collapsible");
        var i;

        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var content = this.nextElementSibling;
                if (content.style.maxHeight) {
                    content.style.maxHeight = null;
                } else {
                    content.style.maxHeight = content.scrollHeight + "px";
                }
            });
        }
    </script>

